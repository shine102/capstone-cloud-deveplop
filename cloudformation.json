{
    "Resources" : {
        
            "S3Bucket": {
                "Type": "AWS::S3::Bucket",
                "Properties": {
                    "BucketName": "shinephoto",
                    "AccessControl": "PublicReadWrite",
                    "CorsConfiguration": {
                        "CorsRules": [
                            {
                                "AllowedHeaders": [
                                    "*"
                                ],
                                "AllowedMethods": [
                                    "POST",
                                    "GET",
                                    "PUT",
                                    "DELETE",
                                    "HEAD"
                                ],
                                "AllowedOrigins": [
                                    "*"
                                ]
                            }
                        ]
                    }
                }
            }
        ,
            "BucketPolicy": {
                "Type": "AWS::S3::BucketPolicy",
                "Properties": {
                    "Bucket": "shinephoto",
                    "PolicyDocument": {
                        "Statement": [
                            {
                                "Action": [
                                    "s3:*"
                                ],
                                "Effect": "Allow",
                                "Principal": {
                                    "AWS": "*"
                                },
                                "Resource": "arn:aws:s3:::shinephoto",
                                "Sid": "Stmt1625306057759"
                            }
                        ],
                        "Version": "2012-10-17"
                    }
                }
            }
        ,
            "DBInstance":
            {
                "Type": "AWS::RDS::DBInstance",
                "Properties":{
                    "AllocatedStorage": "20",
                    "DBInstanceClass": "db.t2.micro",
                    "DBInstanceIdentifier": "shine102",
                    "DBName": "shine102",
                    "Engine": "postgres",
                    "MasterUsername":"shine102",
                    "MasterUserPassword":"shine102",
                    "MultiAZ": "false",
                    "Port": "5432",
                    "StorageType": "gp2",
                    "VPCSecurityGroups": [
                        {
                            "Fn::GetAtt": [
                                "SecurityGroup",
                                "GroupId"
                            ]
                        }
                    ],
                    "PubliclyAccessible": "true",
                    "StorageEncrypted": "false"
                }
            }
        ,
        
            "SecurityGroup": {
                "Type": "AWS::EC2::SecurityGroup",
                "Properties": {
                    "GroupDescription": "SecurityGroup for RDS postgres database",
                    "SecurityGroupIngress": [
                        {
                            "IpProtocol": "tcp",
                            "FromPort": "5432",
                            "ToPort": "5432",
                            "CidrIp": "0.0.0.0/0"
                        }
                    ]
                }
            }
    }
}

